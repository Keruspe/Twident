#!/usr/bin/env python

def build(bld):
	bld.install_files('${PREFIX}/share/twident/templates', 'main.tpl')
	bld.install_files('${PREFIX}/share/twident/templates', 'status.tpl')
	bld.install_files('${PREFIX}/share/twident/templates', 'status_me.tpl')
	bld.install_files('${PREFIX}/share/twident/templates', 'status_direct.tpl')
