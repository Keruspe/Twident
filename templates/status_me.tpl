<div class="status">
	<div class="avatar_me" style="background-image:url('{{avatar}}');"></div>
	<div class="content_{{me}}" id="{{id}}">
		<div class="header">
			<span class="date">{{time}}</span>
			<span class="nick">{{name}}</span>
		</div>
		<div class="{{rtl_class}}">
			{{content}}
		</div>
		<div class="footer">
			<span>{{by_who}}&nbsp;</span><span class="footer-right"><a class="delete" title="{{delete_text}}" href="delete://{{id}}"><img src="{{delete}}" /></a></span>
		</div>
	</div>
</div>

